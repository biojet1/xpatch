<cmdopt command="python xpatch.py">
	<opt char="v" choice="opt" rep="norepeat" group-id="MAIN">
		<description>
			<para>Verbose. Show detailed information.</para>
		</description>
	</opt>

	<opt char="u" choice="opt" rep="norepeat" group-id="MAIN">
		<description>
			<para>Unpatch. Bring back to original file.</para>
		</description>
	</opt>

	<opt char="m" choice="opt" rep="norepeat" group-id="MAIN">
		<description>
			<para>Check MD5 digest. If given in configuration file.</para>
		</description>
	</opt>

	<opt name="dry-run" char="n" choice="opt" rep="norepeat" group-id="MAIN">
		<description>
			<para>Test only dont patch.</para>
		</description>
	</opt>

	<opt choice="plain" rep="norepeat" group-id="MAIN">
		<replaceable>CONFIG</replaceable>
		<description>
			<para>The XML patch configuration file.</para>
		</description>
	</opt>

	<opt rep="repeat" choice="plain" group-id="MAIN">
		<replaceable>FILE</replaceable>
		<description>
			<para>The file to patch.</para>
		</description>
	</opt>

	<cmd-group group-id="MAIN"/>

</cmdopt>
